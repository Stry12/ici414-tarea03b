<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Productos</title>
    <style>
        nav {
            background-color: #5974a0;
            padding: 10px 0;
            text-align: center;
        }
        
        nav a {
            color: #fff;
            margin: 0 15px;
            text-decoration: none;
            font-size: 1.2em;
        }
        
        nav a:hover {
            color: #809bce;
        }
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        h1 {
            text-align: center;
            color: #809bce;
            font-size: 2.5em;
            padding: 20px;
            border-bottom: 2px; 
            margin-bottom: 20px; 
        }

        table {
            margin: 0 auto;
            width: 80%;
            border-collapse: collapse;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        }

        th, td {
            padding: 12px 15px;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #5974a0;
            color: white;
            text-transform: uppercase;
        }

        tr:hover {
            background-color: #f2f2f2;
        }

        .crearform, .updateForm {
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
            width: 80%; 
            max-width: 500px; 
        }

        .crearform input, .updateForm input {
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #ddd; 
            border-radius: 5px;
            width: 95%;
        }

        .crearform button, .updateForm button {
            background-color: #5974a0; 
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 4px;
            width: 100%;
        }

        .crearform button:hover, .updateForm button:hover {
            background-color: #5974a0;
        }

        button[onclick="eliminar(this)"] {
            background-color: red;
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 4px;
        }
        
        button[onclick="eliminar(this)"]:hover {
            background-color: darkred;
        }
        
    </style>
</head>
<nav>
    <a href="/vendedor/getAll">Vendedores</a>
    <a href="/comprador/getAll">Compradores</a>
    <a href="/producto/getAll">Productos</a>
    <a href="/tipoProducto/getAll">Tipos De Productos</a>
</nav>
<body>
    <h1>Lista de Productos</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Número de Vendedor</th>
                <th>ID de Comprador</th>
                <th>ID de Tipo de Producto</th>
                <th>Precio de Compra</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% productos.forEach(producto => { %>
                <tr>
                    <td class="idV"><%= producto.numeroVendedor %></td>
                    <td class="idC"><%= producto.idComprador %></td>
                    <td class="idT"><%= producto.idTipoProducto %></td>
                    <td><%= producto.precioCompra %></td>
                    <td><button onclick="eliminar(this)">Eliminar</button></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    
    <script>
        function eliminar(btn) {
            var row = btn.parentNode.parentNode;
            var idV = row.getElementsByClassName('idV')[0].innerText;
            var idC = row.getElementsByClassName('idC')[0].innerText;
            var idT = row.getElementsByClassName('idT')[0].innerText;

            var data = { "idV": parseInt(idV), "idC": parseInt(idC), "idT": parseInt(idT) };

            fetch('/producto/deleteByComination', {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
            })
            .then(response => response.json())
            .then(data => {
                console.log(data);
                alert('Producto eliminado con éxito.');
                location.reload();
            })
            .catch((error) => {
              console.error('Error:', error);
              alert('Error al eliminar el producto.');
              location.reload();
            });
        }
    </script>
<h1>Modificar Precio Producto</h1>

<form  class="updateForm" id="updateForm">
    <label for="idV">ID Vendedor:</label>
    <input type="text" id="idV" name="idV" required>
    <label for="idC">ID Comprador:</label>
    <input type="text" id="idC" name="idC" required>
    <label for="idT">ID Tipo Producto:</label>
    <input type="text" id="idT" name="idT" required>
    <label for="precio">Nuevo Precio:</label>
    <input type="text" id="precio" name="precio" required>
    <button type="submit">Actualizar</button>
</form>

<script>
document.getElementById('updateForm').addEventListener('submit', function(event) {
    event.preventDefault();

    var idV = document.getElementById('idV').value;
    var idC = document.getElementById('idC').value;
    var idT = document.getElementById('idT').value;
    var precio = document.getElementById('precio').value;

    var data = { "idV": idV, "idC": idC, "idT": idT, "precio": precio };
    console.log(JSON.stringify(data)); 
    fetch('/producto/updatePrecioCompra', {
        method: 'PUT',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
    })
    .then(response => response.json())
    .then(data => {
        console.log(data);
        alert('Precio del producto actualizado con éxito.');
        location.reload();
    })
    .catch((error) => {
      console.error('Error:', error);
      alert('Error al actualizar el precio del producto.');
      location.reload();
    });
});
</script>


<h1>Nuevo Producto</h1>
<form  class="crearform" id="createForm">
    <label for="idvendedor">ID del Vendedor:</label>
    <input type="number" id="idvendedor1" name="idvendedor1" required>
    <label for="idcomprador">ID del Comprador:</label>
    <input type="number" id="idcomprador1" name="idcomprador1" required>
    <label for="idproducto">ID del Producto:</label>
    <input type="number" id="idproducto1" name="idproducto1" required>
    <label for="precio">Precio de Compra:</label>
    <input type="number" id="precio1" name="precio1" required>
    <button type="submit">Crear Producto</button>
</form>

<script>
    document.getElementById('createForm').addEventListener('submit', function(event) {
        event.preventDefault();

        var idV = document.getElementById('idvendedor1').value;
        var idC = document.getElementById('idcomprador1').value;
        var idT = document.getElementById('idproducto1').value;
        var precio = document.getElementById('precio1').value;
        var data = { "idV": idV, "idC": idC, "idT": idT, "precio": precio };
        console.log(JSON.stringify(data)); 

        fetch('http://localhost:4000/producto/create', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
        })
        .then(response => response.json())
        .then(data => {
            console.log(data);
            if (data.message === 'Producto creado') {
                alert('Producto creado con éxito.');
            } else {
                alert('Error al crear el producto o ya existe.');
            }
            location.reload();
        })
        .catch((error) => {
          console.error('Error:', error);
          alert('Error al crear el producto.');
        });
    });
</script>
</body>
</html>
