<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Tipos Productos</title>
</head>
<body>
    <h1>Lista de Tipos de Productos</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
            </tr>
        </thead>
        <tbody>
            <% tipoproductos.forEach(tipoproducto => { %>
                <tr>
                    <td><%= tipoproducto.idTipoProducto %></td>
                    <td><%= tipoproducto.descripcionProducto %></td>
                    <td><button onclick="eliminar(<%= tipoproducto.idTipoProducto %>)">Eliminar</button></td>
            <% }) %>
        </tbody>
    </table>

    <script>
        function eliminar(id) {
            const x = confirm('¿Estás seguro de que deseas eliminar al comprador con ID: ' + id + '?');
            if (x) {
                fetch(`http://localhost:4000/tipoProducto/delete/${id}`, {
                    method: 'DELETE'
                })
                .then(response => {
                    if (response.ok) {
                        return response.json();
                    } else {
                        throw new Error('Error al eliminar el Producto.');
                    }
                })
                .then(data => {
                    if (data.success) {
                        const row = document.querySelector(`button[onclick="eliminar(${id})"]`).parentNode.parentNode;
                        row.parentNode.removeChild(row);
                        alert('Producto eliminado.');
                    } else {
                        alert('Error al eliminar un Producto.');
                    }
                    location.reload(); // Recarga la página después de que se haya completado la operación de eliminación
                })
                .catch(error => {
                    console.error('Error:', error);
                    location.reload(); // Recarga la página si ocurre un error
                });
            }
        }
    </script>


<h1>Actualizar Tipo de Producto</h1>

    
        
   
<form id="updateForm">
    <label for="id">ID:</label>
    <input type="text" id="id" name="id" required>
    <label for="descripcionProducto">Nueva Descripcion:</label>
    <input type="text" id="descripcionProducto" name="descripcionProducto" required>
    <input type="submit" value="Actualizar">
</form>

<script>
    document.getElementById('updateForm').addEventListener('submit', function(event) {
        event.preventDefault();
    
        var id = document.getElementById('id').value;
        var descripcionProducto = document.getElementById('descripcionProducto').value;
    
        var data = { "descripcion": descripcionProducto };
        console.log(JSON.stringify(data)); // Imprime el JSON que se envía
        fetch('/tipoProducto/updateDescripcion/' + id, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
        })
        .then(response => response.json())
        .then(data => {
            console.log(data);
            alert('Producto actualizado con éxito.');
            location.reload();
        })
        .catch((error) => {
          console.error('Error:', error);
          alert('Producto actualizado con éxito.');
          location.reload();
        });
    });
    </script>

<h1>Crear Tipo de Producto</h1>
<form id="createForm">
    <label for="createId">ID:</label><br>
    <input type="number" id="createId" name="id" required><br>
    <label for="createdescripcionProducto">Descripcion:</label><br>
    <input type="text" id="createdescripcionProducto" name="descripcionProducto" required><br>
    <input type="submit" value="Crear TipoProducto">
</form>

<script>
    document.getElementById('createForm').addEventListener('submit', function(event) {
        event.preventDefault();
    
        var id = parseInt(document.getElementById('createId').value);
        var descripcionProducto = document.getElementById('createdescripcionProducto').value;
    
        var data = { "id": id, "descripcion": descripcionProducto };
        console.log("Datos a enviar: ", JSON.stringify(data)); // Imprime el JSON que se envía
    
        fetch('/tipoProducto/create', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
        })
        .then(response => response.json())
        .then(data => {
            console.log(data);
            alert('Producto creado con éxito.');
            location.reload();
        })
        .catch((error) => {
          console.error('Error:', error);
          alert('Error.');
          location.reload();
        });
    });
    </script>
</body>
</html>
